{
  "name": "streamnow",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/api",
    "apps/home-server",
    "apps/desktop"
  ],
  "engines": {
    "node": ">=20.9.0",
    "npm": ">=10.2.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "type-check:api": "npm run build --workspace apps/api -- --noEmit",
    "type-check:all": "npm run type-check && npm run type-check:api",
    "test": "jest",
    "test:api": "jest --config apps/api/jest.config.ts",
    "test:e2e": "playwright test",
    "api:dev": "npm run dev --workspace apps/api",
    "api:build": "npm run build --workspace apps/api",
    "home": "npm run dev --workspace apps/home-server",
    "home:build": "npm run build --workspace apps/home-server",
    "home:start": "npm run start --workspace apps/home-server"
  },
  "dependencies": {
    "@iconify/react": "^4.1.1",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@tanstack/react-query": "^5.0.0",
    "algoliasearch": "^5.43.0",
    "axios": "^1.6.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "framer-motion": "^11.0.0",
    "graphql": "^15.8.0",
    "lucide-react": "^0.400.0",
    "next": "16.0.1",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.4.6",
    "react": "19.2.0",
    "react-toastify": "^10.0.5",
    "react-dom": "19.2.0",
    "react-player": "^2.13.0",
    "tailwind-merge": "^2.2.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.1",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.0",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.2.5",
    "typescript": "^5"
  }
}
